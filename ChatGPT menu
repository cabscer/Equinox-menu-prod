javascript:(function(){
  if (document.getElementById("bookmarkMenu")) return; // Prevent duplicates

  let menu = document.createElement("div");
  menu.id = "bookmarkMenu";
  menu.style.position = "fixed";
  menu.style.top = "50px";
  menu.style.right = "20px";
  menu.style.width = "220px";
  menu.style.background = "#222";
  menu.style.color = "#fff";
  menu.style.border = "2px solid #555";
  menu.style.borderRadius = "10px";
  menu.style.zIndex = "999999";
  menu.style.fontFamily = "Arial, sans-serif";
  menu.style.boxShadow = "0 6px 15px rgba(0,0,0,0.5)";
  menu.style.overflow = "hidden";

  // Header (title bar)
  let header = document.createElement("div");
  header.textContent = "🔥 Bookmark Menu";
  header.style.background = "#111";
  header.style.padding = "10px";
  header.style.cursor = "move";
  header.style.fontWeight = "bold";
  header.style.textAlign = "center";
  menu.appendChild(header);

  let content = document.createElement("div");
  content.style.maxHeight = "60vh";
  content.style.overflowY = "auto";
  content.style.padding = "10px";
  menu.appendChild(content);

  function addButton(name, action) {
    let btn = document.createElement("button");
    btn.textContent = name;
    btn.style.display = "block";
    btn.style.width = "100%";
    btn.style.margin = "6px 0";
    btn.style.padding = "10px";
    btn.style.border = "none";
    btn.style.borderRadius = "6px";
    btn.style.background = "#444";
    btn.style.color = "white";
    btn.style.fontSize = "15px";
    btn.style.cursor = "pointer";
    btn.onmouseenter = () => btn.style.background = "#666";
    btn.onmouseleave = () => btn.style.background = "#444";
    btn.ontouchstart = btn.onclick = action;
    content.appendChild(btn);
  }

  // Example buttons (customize these!)
  addButton("👋 Say Hello", () => alert("Hello from Crackin-style menu!"));
  addButton("✨ Highlight Paragraphs", () => {
    document.querySelectorAll("p").forEach(p => p.style.background="#ff0");
  });
  addButton("🌐 Show Page URL", () => alert(window.location.href));

  // Close button
  addButton("❌ Close Menu", () => menu.remove());

  document.body.appendChild(menu);

  // Make draggable
  let isDragging = false, offsetX, offsetY;
  header.addEventListener("mousedown", e => {
    isDragging = true;
    offsetX = e.clientX - menu.offsetLeft;
    offsetY = e.clientY - menu.offsetTop;
    e.preventDefault();
  });
  document.addEventListener("mousemove", e => {
    if (isDragging) {
      menu.style.left = (e.clientX - offsetX) + "px";
      menu.style.top = (e.clientY - offsetY) + "px";
      menu.style.right = "auto"; // unlock from right side
    }
  });
  document.addEventListener("mouseup", () => isDragging = false);

})();
